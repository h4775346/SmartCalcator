<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFF"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@android:color/holo_blue_dark"

                    >





                        <TextView
                            android:id="@+id/mText"
                            android:text="Result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                           android:padding="10dp"
                            android:background="@drawable/top_text_style"
                            />




                        <EditText
                            android:id="@+id/resultEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:autoLink="all"
                            android:padding="7dp"
                            android:textSize="20sp"
                            android:layout_below="@+id/mText"
                            android:textColor="#000"

                            android:gravity="start"
                            android:background="@drawable/txt_result_style"/>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/resultEt"
                        android:background="@drawable/tail"

                        />
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/image_talk"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_action_talk"
                        android:layout_below="@id/resultEt"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"

                       />
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/image_save"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_action_save"
                        android:layout_below="@id/resultEt"
                        android:layout_marginTop="5dp"

                        android:layout_toStartOf="@id/image_talk"
                        android:layout_marginEnd="15dp"
                        />

                    <ImageView
                        android:clickable="true"
                        android:id="@+id/image_microfone"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_action_microfone"
                        android:layout_below="@id/resultEt"
                        android:layout_marginTop="5dp"

                        android:layout_toStartOf="@id/image_save"
                        android:layout_marginEnd="15dp"
                        />

                    <ImageView
                        android:clickable="true"
                        android:id="@+id/image_camera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_action_camera"
                        android:layout_below="@id/resultEt"
                        android:layout_marginTop="5dp"

                        android:layout_toStartOf="@id/image_microfone"
                        android:layout_marginEnd="15dp"
                        />


                    <ImageView
                        android:clickable="true"
                        android:id="@+id/image_gallery"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_action_m_image"
                        android:layout_below="@id/resultEt"
                        android:layout_marginTop="5dp"

                        android:layout_toStartOf="@id/image_camera"
                        android:layout_marginEnd="15dp"
                        />
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/image_share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_action_m_share"
                        android:layout_below="@id/resultEt"
                        android:layout_marginTop="5dp"

                        android:layout_toStartOf="@id/image_gallery"
                        android:layout_marginEnd="15dp"
                        />

                </RelativeLayout>



            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFF"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                android:id="@+id/lImage"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/imageIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:scaleType="center"
                        android:src="@drawable/say_hi"
                        android:maxHeight="250dp"
                        android:background="@drawable/mage_background"


                   />



                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>






</RelativeLayout>